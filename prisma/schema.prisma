generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id String @id @default(cuid())
  email String  @unique
  password String
  name String?
  Sessions Session[]
  posts posts[]
}

model Session {
  id  String @id @default(cuid())
  sessionToken String @unique
  userId String
  user user @relation(fields: [userId],references: [id])
}

model posts {
  id  String @id @default(cuid())
  title String 
  body String
  photo String?
  postedBy  user    @relation(fields: [userId], references: [id])
  userId    String
}